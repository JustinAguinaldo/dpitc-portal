mixin search(action)
  .container
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="search-nav" aria-expanded="false")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

        .collapse.navbar-collapse(id="search-nav")
          form.navbar-form.navbar-right(role="search")
            .form-group
              input.form-control(type="text", placeholder="Search Elearning...")
            button.btn.btn-default(type="submit") Go!
