extends ../../layouts/default

mixin course(course)
	.container-fluid
		.row
			.col-md-8.embed-responsive-item
				iframe(width="640", height="360", src="https://www.youtube.com/embed/"+course.videoId, frameborder="0" allowfullscreen)
			
		.row
			p.text-info Uploaded: &nbsp;
			p.text-info= course.publishedAt
			&nbsp;
			p.text-info | Author: Project SARAI
		.row
			p= course.content.extended
		
			br
		.row
			p Related: &nbsp;
			each tag in course.tags
				span.label.label-info= tag 
				&nbsp;
	
mixin courselist(courses)
	each course in courses
		.media
			.media-left
				a(href=course.url) 
					img(src=course._.thumbnail.limit(100,100) alt="").img-rounded
			.media-body
				a(href=course.url) 
					h4=course.title

			

block intro
	.container
		
block content
	.container
		.row
			.col-md-8
				.panel.panel-default
					.panel-heading=	data.course.title
					.panel-body
						+course(data.course)
			.col-md-4
				.panel.panel-default
					.panel-heading Recommended Courses
					.panel-body
						+courselist(data.recommendedCourses)
					.panel-heading Other Courses
					.panel-body
						+courselist(data.courses)