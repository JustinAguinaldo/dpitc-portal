extends ../../layouts/community

block content

  .community-body
    #eresources-content
      .container
        .row
          .col-md-9
            .section-header
              .title Latest Publications
              .triangle

            hr.clear
            .row
              each publication in publications
                .col-xs-4.col-md-2
                  .publication-col-grid
                    a(href="/eresources/publication/"+publication._id)
                      .cover
                        img(src=publication._.cover.fit(100, 180, {}))
                      .title
                        h3
                          small #{publication.get('title.trunc')}
              .col-xs-12.more-link
                a(href="/eresources/publications") More Publications

          .col-md-3
            .minor-section-header
              .title Top Categories
              .colored-bar
            .row
              //- if data.industries && data.industries.length
              each industry in data.industries
                  .col-xs-12
                    | #{industry.name} &nbsp;
                    span.badge #{industry.publicationCount}


        .row
          .col-md-9
            .section-header
              .title Links
              .triangle
            hr.clear
            .row
              each link in links
                .col-xs-12.eresources-link
                  img(src=link._.image.fill(200, 150, {})).image
                  .data
                    .title
                      a(href=link.url) #{link.name}
                    .description #{link.description}
              .col-xs-12.more-link
                //- a(href="/eresources/links") More Links
