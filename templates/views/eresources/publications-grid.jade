extends ./publications

block publications
  .row
    //- .heading-center
      h4=data.category+': '+data.categoryResult.name
    each publication in data.publications 
      .col-sm-6.col-md-3(style='padding-left:0')
        .thumbnail(style='padding:10px')
          .publication-col-grid
            a(href="/eresources/publication/"+publication._id)
              .cover
                img(src=publication._.cover.fit(100, 180, {}))
              .title(style='margin-top: 5px;')
                h4
                  small #{publication.get('title.trunc')}
              .details
                small #{publication.get('description.truncGrid')}