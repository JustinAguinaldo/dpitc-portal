extends ../../layouts/elearning

block js

block signin
  form.contact-form(method="post")
    .row
      input(type='hidden', name='action', value='signin')
      .form-group
        label.control-label Email
        .row
          .col-xs-6.col-md-12
            input.form-control.input-box(type='email', name='email', value=formData.signin_email, placeholder='Email')
      .form-group
        label.control-label Password
        .row
          .col-xs-6.col-md-6
            input.form-control.input-box(type='password', name='password', value=formData.signin_password, placeholder='Password')
    hr
    .row.pull-right
      button(type='submit').btn.btn-primary Sign In

block content
  .container
    .row
      .col-xs-12.col-md-6.col-md-offset-3
        .panel.panel-default
          .panel-body
            if user
              p You are already logged in.
            else
              block signin
