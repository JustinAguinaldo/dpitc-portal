extends ../../layouts/admin-default

block content
  .row
    .col-sm-9.col-sm-offset-7.col-md-10.col-md-offset-2.main
        if data.path === '/admin/sliders'
                form.form-group.row(method='post', action='/admin/sliders')
                    input(type='hidden', name='action', value='createSliders')
                    if data.sliders.length > 0
                        .row
                            .col-md-6
                                input.form-control(type='text', placeholder='Search..')
                            .col-md-2
                                button.btn.btn-success(type='button', data-toggle='modal', data-target='#createSliders') Create Sliders
                        .table-responsive   
                            table.table.table-striped
                                thead
                                tr  
                                    th Name
                                tbody
                                each slider in data.sliders
                                    tr   
                                        td 
                                            a(href='/admin/sliders/'+slider._id) #{slider.name}
                    else
                        .jumbotron
                            h3 No slider found...
                            button.btn.btn-success(type='button', data-toggle='modal', data-target='#createSliders') + Create Slider
                    #createSliders.modal.fade(tabindex='-1', role='dialog', aria-labelledby='createSliderLabel')
                        .modal-dialog(role='document')
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                                        span(aria-hidden='true') Ã—
                                    h4#createSliderLabel.modal-title Create a new slider
                                .modal-body
                                    .row
                                        .col-md-12   
                                            label  Name
                                            input.form-control(type='text', placeholder='name', name='name')
                                .modal-footer                                    
                                    button.btn.btn-primary(type='submit', name='createSliders') Create
                                    button.btn.btn-default(type='button', data-dismiss='modal', onclick='window.location.reload();') Close