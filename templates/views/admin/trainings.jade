extends ../../layouts/admin-default

block content
  .row
    .col-sm-9.col-sm-offset-7.col-md-10.col-md-offset-2.main
        if data.path === '/admin/trainings'
                form.form-group.row(method='post', action='/admin/trainings')
                    input(type='hidden', name='action', value='createTrainings')
                    if data.trainings.length > 0
                        .row
                            .col-md-6
                                input.form-control(type='text', placeholder='Search..')
                            .col-md-2
                                button.btn.btn-success(type='button', data-toggle='modal', data-target='#createTrainings') Create Training
                        .table-responsive   
                            table.table.table-striped
                                thead
                                tr  
                                    th Title
                                tbody
                                each training in data.trainings
                                    tr   
                                        td 
                                            a(href='/admin/trainings/'+training._id) #{training.title}
                    else
                        .jumbotron
                            h3 No training found...
                            button.btn.btn-success(type='button', data-toggle='modal', data-target='#createTrainings') + Create Training
                    #createTrainings.modal.fade(tabindex='-1', role='dialog', aria-labelledby='createTrainingsLabel')
                        .modal-dialog(role='document')
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                                        span(aria-hidden='true') Ã—
                                    h4#createTrainingsLabel.modal-title Create a new training
                                .modal-body
                                    .row
                                        .col-md-12   
                                            label  Title
                                            input.form-control(type='text', placeholder='title', name='title')
                                .modal-footer                                    
                                    button.btn.btn-primary(type='submit', name='createTrainings') Create
                                    button.btn.btn-default(type='button', data-dismiss='modal', onclick='window.location.reload();') Close