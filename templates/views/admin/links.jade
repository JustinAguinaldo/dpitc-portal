extends ../../layouts/admin-default

block content
  .row
    .col-sm-9.col-sm-offset-7.col-md-10.col-md-offset-2.main
          .jumbotron
            h3 No Links Found
            button.btn.btn-success(type='button', data-toggle='modal', data-target='#createLinks') + Create Link
              #createLinks.modal.fade(tabindex='-1', role='dialog', aria-labelledby='createLinksLabel', onclick='window.location.reload();')
                .modal-dialog(role='document')
                    .modal-content
                      .modal-header
                          button.close(type='button', data-dismiss='modal', aria-label='Close')
                              span(aria-hidden='true') Ã—
                          h4#createLinksLabel.modal-title Create a new link
                      .modal-body
                          .row
                              .col-md-12   
                                  label  Name
                                      input.form-control(type='text', placeholder='name', name='name')
                          .row
                              .col-md-12   
                                  label  URL
                                      input.form-control(type='text', placeholder='URL', name='url')
                      .modal-footer                                    
                          button.btn.btn-primary(type='submit', name='createLinks') Create
                          button.btn.btn-default(type='button', data-dismiss='modal', onclick='window.location.reload();') Close