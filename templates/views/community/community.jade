block content
  
  if !user
    include community-public.jade
  else
    .community-body
      .container
        .row
          .col-md-5
            h3
              i.fa.fa-comments-o(aria-hidden='true')
              | &nbsp;Discussion
            hr
            ul.list-group
              each training in trainings
                a(href="#").list-group-item
                  h4.list-group-item-heading #{training.title}
                  p.list-group-item-text !{training.description.brief}
            a(href="#") More
            br
            br
            
            h3
              i.fa.fa-calendar(aria-hidden='true')
              | &nbsp;Events
